@model IEnumerable<EmployeeInfoApprovalSystem.Models.Employee>

<h1>Approval Page</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Department</th>
        <th>Approval</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Name</td>
            <td>@employee.Position</td>
            <td>@employee.Department?.Name</td>
            <td><button>Approve</button></td>
        </tr>
    }
</table>
